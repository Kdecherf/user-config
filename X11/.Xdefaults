!
! .Xdefaults
!

! General
URxvt*font: xft:sarasa term cl:pixelsize=13:antialias=true,hinting=true

URxvt.urgentOnBell:		true

! Scroll
URxvt.saveLines:		8192
URxvt.scrollBar:		false
URxvt.jumpScroll:		true
URxvt.scrollTtyOutput:		false
URxvt.scrollTtyKeypress:	true
URxvt.scrollWithBuffer:		true

! Cursor
URxvt.cursorUnderline:		true
URxvt.cursorBlink:		true

! Extensions
URxvt.perl-ext-common:		default,matcher
URxvt.matcher.button:		1
URxvt.url-launcher: /usr/bin/xdg-open

! Key compat
URxvt.keysym.C-Left:		\033[1;5D
URxvt.keysym.C-Right:		\033[1;5C
URxvt.keysym.C-Page_Up:		\033[5;5~
URxvt.keysym.C-Page_Down:	\033[6;5~

URxvt.matcher.rend.0: Uline Regular fg5
URxvt.letterSpace: 0

! special
*.foreground:   #babdb6
*.background:   #000000
*.cursorColor:  #babdb6

! black
*.color0:       #2e3436
*.color8:       #555753

! red
*.color1:       #cc0000
*.color9:       #ef2929

! green
*.color2:       #4e9a06
*.color10:      #8ae234

! yellow
*.color3:       #c4a000
*.color11:      #fce94f

! blue
*.color4:       #3465a4
*.color12:      #729fcf

! magenta
*.color5:       #75507b
*.color13:      #ad7fa8

! cyan
*.color6:       #06989a
*.color14:      #34e2e2

! white
*.color7:       #d3d7cf
*.color15:      #eeeeec

