[alias]
   # Daily aliases
   a = add
   d = rm
   p = push
   f = fetch --all --prune
   st = status -sb
   ci = commit -s -v
   ca = commit -s -v --amend
   cam = commit -s --amend -C HEAD
   br = branch
   co = checkout
   cp = cherry-pick
   df = diff
   sh = stash
   shup = stash pop
   edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; vi -p `f`"
   add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
   wls = worktree list
   wrm = worktree remove
   merge-into = "!f() { git fetch . HEAD:${1} ; }; f"
   # Custom commands
   gbr = gone-branches
   cbr = create-branch
   # Uncommon aliases
   dfs = diff --stat
   lg = log -p
   who = shortlog -s --
   ds = describe
   tk = log --name-status --pretty=oneline
   kick = update-index --assume-unchanged
   unkick = update-index --no-assume-unchanged
   fap = format-patch HEAD~
   fapfap = format-patch
   pe = format-patch -M -C --find-copies-harder --stdout
   whereis = for-each-ref --contains
   introduce = "!f() { git tag --contains ${1} | sort --human-numeric-sort | head -n1 ; }; f"

[color]
   diff = auto
   branch = auto
   status = auto
   ui = true
